    <title>goals edit page</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <h1 class="pl-2">Edit Goals page</h1>
    <form class="field pl-3" action="/goals/<%=goals.id%>?_method=PUT" method="POST">
